{
  "name": "handsome-terminal",
  "version": "1.0.0",
  "description": "Ultimate AI-driven cross-platform terminal for System & Network Engineers",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:e2e": "playwright test",
    "package": "electron-builder",
    "package:dir": "electron-builder --dir"
  },
  "keywords": [
    "terminal",
    "ai",
    "llm",
    "devops",
    "system-engineering",
    "network-engineering"
  ],
  "author": "Handsome Terminal Team",
  "license": "MIT",
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "axios": "^1.7.7",
    "chokidar": "^4.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "eventemitter3": "^5.0.1",
    "framer-motion": "^11.11.17",
    "ioredis": "^5.4.1",
    "lucide-react": "^0.460.0",
    "node-pty": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.19.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.16.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.49",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.29.0",
    "vitest": "^2.1.8",
    "wait-on": "^8.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ChrisNelsonOK/HandsomeTerminal.git"
  },
  "build": {
    "publish": {
      "provider": "github",
      "owner": "ChrisNelsonOK",
      "repo": "HandsomeTerminal"
    },
    "appId": "com.handsometerminal.app",
    "productName": "Handsome Terminal",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
